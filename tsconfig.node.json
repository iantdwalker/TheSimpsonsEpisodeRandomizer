{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "composite": true,
    "module": "ESNext",
    "types": ["node", "vite/client"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
